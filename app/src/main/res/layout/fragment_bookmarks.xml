<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.tarpost.bryanty.proj_t_post.fragment.BookmarkFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshBookmarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- recyclerview information item-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewBookmarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"/>

        <ProgressBar
            android:id="@+id/progressBarBookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true" />

    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
